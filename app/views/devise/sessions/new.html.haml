.login
  .login__header
    -# = render 'header'
    .nav-category
      .ul.nav-category__lists
        .li.nav-category__lists__list
          -# - breadcrumb :login
          -# = breadcrumbs pretext: "",separator: " &rsaquo; ", class: "breadcrumb"
  .login__main
    %h1 ログイン画面
    .login__main__panel
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .field
          %br/
          = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス", class: "user-textform"
        .field
          %br/
          = f.password_field :password, autocomplete: "current-password", placeholder: "7文字以上のパスワード", class:"user-textform"
        - if devise_mapping.rememberable?
          .field
            = f.check_box :remember_me
            = f.label :remember_me
        .actions
          = f.submit "ログイン", class: "login-btn"
      = render "devise/shared/links"
      .actions
