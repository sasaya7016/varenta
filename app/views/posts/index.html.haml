= render "products/modules/header"
-# = render "products/modules/pankuzu"

.news-wrapper
  - @posts.first(1).reverse.each do |post|
    .news-contents
      .news-contents__pickup
        .pickup__subject
          %h2 投稿日：
          %h2 
            = post.created_at.strftime('%Y/%m/%d %H:%M:%S')
          
        .pickup__image
          .pickup__image__first
            = image_tag("main.logo2.jpg",class:"post-logo")
            -# = post.image
          .pickup__image__second
            = image_tag("main.logo.jpg",class:"post-logo")

        .pickup__text
          .pickup__text__title
            %h1 
              = post.name
          .pickup__text__main
            %p
              = simple_format post.text

      
      .news-contents__side-bar
        .side-ber__subject
          %h2 past article
          %hr 
          - @posts.first(3).each do |post|
            %ul
              %li 
                = link_to "#{post.name}", "/posts/#{post.id}", method: :get
              %br

        = link_to '投稿', new_post_path
        = link_to '詳細', "/posts/#{post.id}", method: :get
        = link_to '編集', "/posts/#{post.id}/edit", method: :get
        = link_to '削除', "/posts/#{post.id}", method: :delete
  
    = paginate @posts


.info
  .info__contents
    .info__contents__news
      %h3 N E W S
      - @posts.first(3).each do |post|
        .info-list
          = link_to "/posts/#{post.id}", class:"pickup-news " ,method: :get do
            %p
              = image_tag("news.png",class:"post-logo")
            %p
              = post.created_at.strftime('%Y/%m/%d')
            %p
              %span New
            %p
              = post.name


         

    .info__contents__schedule
      .info__contents__schedule__title
        -# %h3 T O P I C K
   

= render "products/modules/footer"