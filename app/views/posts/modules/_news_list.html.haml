.news-lists
  .news-lists__pickup
    %table.table
      %thead
        %tr
          %th.scope 投稿日
          %th.scope タイトル
          %th.scope 詳細
      %tbody
        -@posts.each do |post|
          %tr
            %th.scope
              = post.created_at.strftime('%Y/%m/%d %H:%M:%S')
            %th.scope 
              = post.name
            %th.scope 
              = link_to '詳細', "/posts/#{post.id}", method: :get
           


  .pager
    .page-btn
      = paginate @posts